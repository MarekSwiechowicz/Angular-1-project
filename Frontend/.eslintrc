{
    "extends": "eslint:recommended",
    "plugins": [
        "angular"
    ],
    "rules": {
        "angular/controller-as": 0,
        "angular/controller-as-vm": 0,
        "angular/log": 0,
        "no-console": 0,
        "angular/definedundefined": 0,
         "no-unused-vars": [2, {"vars": "local", "args": "none"}],
         "no-extra-boolean-cast": 0
    },
    "env": {
        "browser": true,
        "jasmine": true,
	       "node": true
    },
    "globals": {
        "angular": true,
        "module": true,
        "inject": true,
        "PerfectScrollbar": true,
        "MobileDetect": true,
        "hljs": true,
        "d3": true,
        "moment": true
    }
}
